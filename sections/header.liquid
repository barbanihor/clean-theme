{{ 'header.css' | asset_url | stylesheet_tag }}

<header class="header" role="banner">
  {%- render 'logo' -%}

  {%- render 'nav-main' -%}

  <div class="header__actions actions">
    <a class="actions__cart" href="{{ routes.cart_url }}" aria-label="{{ 'a11y.open_cart' | t | default: 'Open cart' }}">
      {%- render 'icon-cart' -%}
    </a>

    {%- if shop.customer_accounts_enabled -%}
      {%- if customer -%}
        <a class="actions__link" href="{{ routes.account_url }}">{{ 'header.account' | t | default: 'Account' }}</a>
        <a class="actions__link" href="{{ routes.account_logout_url }}">{{ 'header.logout' | t | default: 'Log out' }}</a>
      {%- else -%}
        <a class="actions__link" href="{{ routes.account_login_url }}">{{ 'header.login' | t | default: 'Log in' }}</a>
        <a class="actions__link" href="{{ routes.account_register_url }}">{{ 'header.register' | t | default: 'Register' }}</a>
      {%- endif -%}
    {%- endif -%}
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Header Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
