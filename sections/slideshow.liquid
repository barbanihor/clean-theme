{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<style>
  .slideshow__dots-container {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .slideshow__dot {
    width: 20px;
    height: 8px;
    border-radius: 12px;
    background-color: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .slideshow__dot--active {
    width: 20px;
    background-color: white;
  }

  .slideshow__dot:hover:not(.slideshow__dot--active) {
    background-color: rgba(255, 255, 255, 0.7);
  }

  .slider-button {
    display: none !important;
  }

  .slideshow__autoplay {
    display: none !important;
  }

  .slideshow__content {
    position: absolute;
    max-width: 648px;
    z-index: 1;
    display: flex;
    flex-direction: column;
    top: 227px;
    left: 60px;
  }

  .slideshow__heading {
    margin: 0;
    color: #fff;
    font-weight: 700;
    font-size: 48px;
    line-height: 48px;
    letter-spacing: 0%;
    text-transform: uppercase;
  }

  .slideshow__subheading {
    color: #fff;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0%;
  }

  .slideshow__button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 32px;
    width: 220px;
    height: 56px;
    border-radius: 8px;
    background-color: #fff;
    color: #515151ff;
  }

  .slideshow__button-link {
    border: none;
    background: none;
    padding: 0;
    margin: 0;
    font: inherit;
    display: inline;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .slider-counter__link--dots .dot {
    width: 8px !important;
    height: 8px !important;
    background-color: rgba(255, 255, 255, 0.4) !important;
    border: none !important;
  }

  .slider-counter__link--active.slider-counter__link--dots .dot {
    background-color: white !important;
    width: 24px !important;
    border-radius: 12px !important;
  }

  .slideshow.slider--everywhere {
    margin-bottom: 0 !important;
  }

  .slideshow__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slideshow__slide {
    min-width: 100%;
    max-width: 100%;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slideshowComponent = document.querySelector('slideshow-component');
    if (!slideshowComponent) {
      console.log('No slideshow component found');
      return;
    }

    const slider = slideshowComponent.querySelector('.slider');
    const customDots = slideshowComponent.querySelectorAll('.slideshow__dot');

    if (!slider) {
      console.log('No slider found');
      return;
    }

    if (!customDots.length) {
      console.log('No dots found');
      return;
    }

    const autoplay = slider.getAttribute('data-autoplay') === 'true';
    const speed = parseInt(slider.getAttribute('data-speed')) || 5;
    const totalSlides = slider.querySelectorAll('.slider__slide').length;

    console.log('Slideshow initialized:', { autoplay, speed, totalSlides });

    let currentSlideIndex = 0;
    let autoplayTimer = null;

    function updateCustomDots() {
      const slideWidth = slider.clientWidth;
      const scrollLeft = slider.scrollLeft;
      const newIndex = Math.round(scrollLeft / slideWidth);

      if (newIndex !== currentSlideIndex) {
        currentSlideIndex = newIndex;
      }

      customDots.forEach((dot, index) => {
        if (index === currentSlideIndex) {
          dot.classList.add('slideshow__dot--active');
        } else {
          dot.classList.remove('slideshow__dot--active');
        }
      });
    }

    function goToSlide(index) {
      if (index < 0 || index >= totalSlides) return;

      const slideWidth = slider.clientWidth;
      currentSlideIndex = index;

      slider.scrollTo({
        left: slideWidth * index,
        behavior: 'smooth',
      });

      updateCustomDots();
    }

    function nextSlide() {
      const nextIndex = (currentSlideIndex + 1) % totalSlides;
      goToSlide(nextIndex);
    }

    function startAutoplay() {
      stopAutoplay();
      if (autoplay && totalSlides > 1) {
        autoplayTimer = setInterval(nextSlide, speed * 1000);
        console.log('Autoplay started');
      }
    }

    function stopAutoplay() {
      if (autoplayTimer) {
        clearInterval(autoplayTimer);
        autoplayTimer = null;
        console.log('Autoplay stopped');
      }
    }

    function restartAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    customDots.forEach((dot, index) => {
      dot.addEventListener('click', (e) => {
        e.preventDefault();
        console.log('Dot clicked:', index);
        goToSlide(index);
        restartAutoplay();
      });
    });

    slider.addEventListener('scroll', updateCustomDots);

    slideshowComponent.addEventListener('mouseenter', stopAutoplay);
    slideshowComponent.addEventListener('mouseleave', startAutoplay);

    // Клавіатурна навігація - WCAG 2.1.1 (A)
    slideshowComponent.setAttribute('tabindex', '0');
    slideshowComponent.setAttribute('role', 'region');
    slideshowComponent.setAttribute('aria-label', 'Image carousel');

    slideshowComponent.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        const prevIndex = (currentSlideIndex - 1 + totalSlides) % totalSlides;
        goToSlide(prevIndex);
        restartAutoplay();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        const nextIndex = (currentSlideIndex + 1) % totalSlides;
        goToSlide(nextIndex);
        restartAutoplay();
      }
    });

    // Initialize
    updateCustomDots();
    startAutoplay();
  });
</script>

<slideshow-component
  class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="Slideshow"
  aria-label="{{ section.settings.accessibility_info | escape }}"
  style="position: relative"
>
  <div class="slideshow__content">
    {%- if section.settings.heading != blank -%}
      <h1 class="slideshow__heading {{ section.settings._heading_size }}">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <div class="slideshow__subheading">
        <p style="margin: 0; margin-top: 16px">{{ section.settings.subheading }}</p>
      </div>
    {%- endif -%}
    {%- if section.settings.button_label != blank -%}
      <div class="slideshow__button">
        <a
          {% if section.settings.button_link %}
            href="{{ section.settings.button_link }}"
          {% endif %}
          class="slideshow__button-link"
        >
          {{ section.settings.button_label | escape }}
        </a>
      </div>
    {%- endif -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__dots-container">
      {%- for block in section.blocks -%}
        <button
          class="slideshow__dot{% if forloop.index == 1 %} slideshow__dot--active{% endif %}"
          aria-label="Slide {{ forloop.index }}"
          data-slide-index="{{ forloop.index0 }}"
        ></button>
      {%- endfor -%}
    </div>
  {%- endif -%}

  <div
    class="slideshow banner banner--{{ section.settings.slide_height }} grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="{{ section.settings.auto_rotate }}"
    data-speed="{{ section.settings.change_slides_speed }}"
  >
    {%- for block in section.blocks -%}
      <style>
        #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
      </style>
      <div
        class="slideshow__slide grid__item grid--1-col slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="Slide"
        aria-label="{{ forloop.index }} of {{ forloop.length }}"
        tabindex="-1"
      >
        <div class="slideshow__media banner__media media{% if block.settings.image == blank %} placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
          {%- if block.settings.image -%}
            {%- liquid
              assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
              if section.settings.image_behavior == 'ambient'
                assign sizes = '120vw'
                assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
              else
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              endif
              assign fetch_priority = 'auto'
              if section.index == 1
                assign fetch_priority = 'high'
              endif
            -%}
            {%- if forloop.first %}
              {{
                block.settings.image
                | image_url: width: 3840
                | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
              }}
            {%- else -%}
              {{
                block.settings.image
                | image_url: width: 3840
                | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
              }}
            {%- endif -%}
          {%- else -%}
            {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
            {%- if placeholder_slide == 1 -%}
              {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- else -%}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "full_bleed",
          "label": "Full width"
        },
        {
          "value": "grid",
          "label": "Grid"
        }
      ],
      "default": "full_bleed",
      "label": "Layout"
    },
    {
      "type": "select",
      "id": "slide_height",
      "options": [
        {
          "value": "adapt_image",
          "label": "Adapt to first image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Slide height"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "select",
      "id": "image_behavior",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "ambient",
          "label": "Ambient"
        }
      ],
      "default": "none",
      "label": "Image behavior"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "checkbox",
      "id": "show_text_below",
      "label": "Show text below images on mobile",
      "default": true
    },
    {
      "type": "header",
      "content": "Accessibility"
    },
    {
      "type": "text",
      "id": "accessibility_info",
      "label": "Slideshow description",
      "info": "Describe the slideshow for customers using screen readers",
      "default": "Slideshow about our brand"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image title"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_overlay_opacity",
          "min": 0,
          "max": 100,
          "step": 10,
          "unit": "%",
          "label": "Image overlay opacity",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
