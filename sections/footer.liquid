{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__column">
        <h3 class="footer__title">{{ 'footer.resources' | t }}</h3>
        <ul class="footer__list">
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.find_store' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.become_member' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.feedback' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.promo_codes' | t }}</a></li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__title">{{ 'footer.help' | t }}</h3>
        <ul class="footer__list">
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.get_help' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.order_status' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.shipping' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.returns' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.payment_options' | t }}</a></li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__title">{{ 'footer.company' | t }}</h3>
        <ul class="footer__list">
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.about' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.news' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.careers' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.investors' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.sustainability' | t }}</a></li>
        </ul>
      </div>

      <div class="footer__column">
        <h3 class="footer__title">{{ 'footer.menu' | t }}</h3>
        <ul class="footer__list">
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.new_featured' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.men' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.women' | t }}</a></li>
          <li class="footer__item"><a href="#" class="footer__link">{{ 'footer.kids' | t }}</a></li>
        </ul>
      </div>
    </div>

    <nav class="footer__nav" aria-label="{{ 'a11y.footer_nav' | t }}">
      <a href="{{ routes.account_login_url }}" class="footer__nav-link">{{ 'footer.login' | t }}</a>
      <a href="{{ routes.search_url }}" class="footer__nav-link">{{ 'footer.search' | t }}</a>
    </nav>

    <small class="footer__copyright">&copy; {{ 'footer.copyright' | t }} {{ shop.name | escape }}</small>
  </div>
</footer>
