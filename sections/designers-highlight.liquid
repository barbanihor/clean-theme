{% style %}
  h1,
  h2,
  h3,
  p {
    margin: 0;
  }

  .designers-highlight {
    padding: 60px 10px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .designers-highlight__heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 40px;
    color: #1a1a1a;
  }

  .designers-highlight__cards {
    display: grid;
    grid-template-columns: 1;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .designers-highlight__cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .designers-highlight__cards {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .designer-card {
    background: #fff;
    border-radius: 16px;
    padding: 32px 24px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .designer-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
  }

  .designer-card__image {
    align-self: center;
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid #f5f5f5;
  }

  .designer-card__name {
    margin-top: 15px;
    align-self: center;
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.2;
  }

  .designer-card__role {
    margin-top: 5px;
    align-self: center;
  }

  .designer-card__section-title {
    margin-top: 24px;
    margin-bottom: 8px;
    font-size: 0.875rem;
    font-weight: 700;
    color: #1a1a1a;
    letter-spacing: 0.5px;
  }

  .designer-card__bio {
    font-size: 1rem;
    line-height: 1.6;
    color: #333;
  }

  .designer-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    width: 100%;
  }

  .designer-card__tag {
    background: #f0f0f0;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.875rem;
    color: #333;
    font-weight: 500;
  }

  .designer-card__portfolio {
    width: 100%;
  }

  .designer-card__link {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    font-size: 0.9rem;
    word-break: break-all;
    transition: color 0.2s ease;
  }

  .designer-card__link:hover {
    color: #0052a3;
    text-decoration: underline;
  }

  .designer-card__date {
    font-size: 1rem;
    color: #333;
  }

  .designer-card__verified {
    margin-top: 20px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #d4edda;
    padding: 10px 20px;
    border-radius: 24px;
    font-size: 0.95rem;
    color: #155724;
    font-weight: 600;
  }

  .designer-card__verified-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
{% endstyle %}

<div class="designers-highlight">
  {% if section.settings.heading %}
    <h2 class="designers-highlight__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.collection.metafields.custom.designers.value %}
    {% assign designers_list = section.settings.collection.metafields.custom.designers.value %}

    <div class="designers-highlight__cards">
      {% for designer in designers_list %}
        <div class="designer-card">
          {% if designer.image %}
            {{ designer.image | image_url: width: 300 | image_tag: class: 'designer-card__image' }}
          {% endif %}

          {% if designer.name %}
            <h3 class="designer-card__name">{{ designer.name }}</h3>
            <div class="designer-card__role">Designer</div>
          {% endif %}

          {% if designer.bio %}
            <p class="designer-card__section-title">Bio</p>
            <p class="designer-card__bio">{{ designer.bio }}</p>
          {% endif %}

          {% if designer.tags %}
            <p class="designer-card__section-title">Tags</p>
            <div class="designer-card__tags">
              {% for tag in designer.tags.value %}
                <span class="designer-card__tag">{{ tag }}</span>
              {% endfor %}
            </div>
          {% endif %}

          {% if designer.portfolio_links %}
            <p class="designer-card__section-title">Portfolio links</p>
            <div class="designer-card__portfolio">
              {% for link in designer.portfolio_links.value %}
                <a href="{{ link.url }}" class="designer-card__link" target="_blank" rel="noopener">
                  {{ link.url }}
                </a>
              {% endfor %}
            </div>
          {% endif %}

          {% if designer.date_of_birth %}
            <p class="designer-card__section-title">Date of birth</p>
            <p class="designer-card__date">{{ designer.date_of_birth | date: '%B %e, %Y' }}</p>
          {% endif %}

          {% if designer.verified %}
            <div class="designer-card__verified">
              {{ 'checkmark.svg' | inline_asset_content }}
              Verified Designer
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Desighners Highlight",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Our designers",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Desighners highlight"
    }
  ]
}
{% endschema %}
